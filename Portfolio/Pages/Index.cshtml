    <script>
        
        // Gestion du thème sombre
        const themeButton = document.getElementById('theme-button');
        const body = document.body;

        if (localStorage.getItem('theme') === 'dark') {
            body.classList.add('dark-mode');
            themeButton.textContent = '☀️';
        }

        themeButton.addEventListener('click', () => {
            body.classList.toggle('dark-mode');
            if (body.classList.contains('dark-mode')) {
                localStorage.setItem('theme', 'dark');
                themeButton.textContent = '☀️';
            } else {
                localStorage.setItem('theme', 'light');
                themeButton.textContent = '🌙';
            }
        });


        // Ouvrir le popup
        function openPopup(popupId) {
            document.getElementById(popupId).style.display = 'flex';
        }

        // Fermer le popup
        function closePopup(popupId) {
            document.getElementById(popupId).style.display = 'none';
        }

        // Fonction pour ouvrir le modal avec l'image agrandie
        function openModal(imgElement) {
            // Cache le popup s'il est ouvert
            var popup = document.querySelector('.popup-overlay');
            if (popup) {
                popup.style.display = 'none'; // Cache le popup
            }

            // Crée un modal
            var modal = document.createElement('div');
            modal.className = 'modal';

            // Crée l'image agrandie
            var modalImg = document.createElement('img');
            modalImg.className = 'modal-content';
            modalImg.src = imgElement.src; // Définit la source de l'image sur celle de l'image cliquée

            // Ajoute l'image dans le modal
            modal.appendChild(modalImg);

            // Crée un bouton pour fermer le modal
            var span = document.createElement('span');
            span.className = 'close';
            span.innerHTML = '&times;'; // Symbole de fermeture

            // Ferme le modal quand on clique sur le bouton
            span.onclick = function () {
                modal.style.display = 'none';
            };

            // Ajoute le bouton de fermeture
            modal.appendChild(span);

            // Ajoute le modal au corps de la page
            document.body.appendChild(modal);

            // Affiche le modal
            modal.style.display = 'block';
        }

        // Fonction pour fermer le modal en cliquant sur le fond
        window.onclick = function (event) {
            if (event.target.className === 'modal') {
                event.target.style.display = 'none'; // Ferme le modal si on clique à l'extérieur
            }
        };


    </script>

